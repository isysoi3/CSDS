<h1>Editing Post</h1>

<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, size: "60" %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, cols: "150", rows: "40" %>
  </div>
  <div class="field">
    <%= f.label "Public post: " %>
    <%= f.check_box :public %> 
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', user_posts_path(current_user) %>
